@model Shop.Models.IndexViewModel
@{
    ViewBag.Title = "Quản lý thông tin tài khoản";
}

<header class="py-5" style="background: linear-gradient(90deg, rgba(0,212,200,1) 0%, rgba(200,9,121,1) 35%, rgba(0,212,255,1) 100%); max-width: 1200px; margin-left: auto; margin-right: auto;">
    <div class="container px-1 px-lg-1 my-1">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">@ViewBag.Title</h1>
            <p class="lead fw-normal mb-0" style="color: #4cff00;">@ViewBag.StatusMessage</p>
        </div>
    </div>
</header>

<section class="py-5" style="max-width: 1200px; margin-left: auto; margin-right: auto;">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            <div class="col mb-5">
                <div class="card h-100">
                    <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Ảnh đại diện</div>
                    <img class="card-img-top" src="~/Content/images/dependabot.png" alt="iLaptop" />
                    <div class="card-body p-4">
                        <div class="text-center">
                            <h5 class="fw-bolder">SĐT: @(Model.PhoneNumber ?? "Chưa cung cấp")</h5>
                            <h5 class="fw-bolder">Địa chỉ: @(Model.diachi ?? "Chưa cung cấp")</h5>
                            @using (Html.BeginForm("UpdateProfile", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <label for="PhoneNumber" class="control-label">Số điện thoại mới</label>
                                    <input type="text" name="PhoneNumber" id="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />
                                </div>
                                <div class="form-group">
                                    <label for="diachi" class="control-label">Địa chỉ mới</label>
                                    <input type="text" name="diachi" id="diachi" class="form-control" value="@Model.diachi" />
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Cập nhật" class="btn btn-primary mt-2" />
                                </div>
                            }
                            <div class="d-flex justify-content-center small text-warning mb-2">
                                <small>
                                    <i class="fas fa-star" style="color: #ed0fef"></i>
                                    <i class="fas fa-star" style="color: #ed0fef"></i>
                                    <i class="fas fa-star" style="color: #ed0fef"></i>
                                    <i class="fas fa-star" style="color: #ed0fef"></i>
                                    <i class="fas fa-star" style="color: #ed0fef"></i>
                                </small>
                            </div>
                            Khách hàng
                        </div>
                    </div>
                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                        <div style="border: 4px;" class="text-center social-icon">
                            <a class="btn btn-outline-danger mt-auto" href="@Url.Action("DonHangDaMua","Home")" target="_blank">
                                <i class="fa fa-money-bill-wave-alt"></i> Đơn hàng đã mua
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div>
                <h4 class="text-center">Thay đổi cài đặt tài khoản của bạn</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>Mật khẩu:</dt>
                    <dd>
                        @if (Model.HasPassword)
                        {
                            <a class="btn btn-outline-info" href="@Url.Action("ChangePassword", "Manage")"> Đổi mật khẩu</a>
                        }
                        else
                        {
                            <a class="btn btn-outline-success" href="@Url.Action("SetPassword", "Manage")"> Tạo mật khẩu</a>
                        }
                    </dd>
                    <dt>Đăng nhập Google, Facebook: @Model.Logins.Count</dt>
                    <dd>
                        <a class="btn btn-outline-danger" href="@Url.Action("ManageLogins", "Manage")"> Quản lý Login</a>
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</section>